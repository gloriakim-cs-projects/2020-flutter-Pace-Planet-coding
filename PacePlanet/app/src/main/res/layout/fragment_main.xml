<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMain"
    android:theme="@style/FontStyle"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorWhite"
            android:textSize="50sp"
            android:textStyle="bold"
            android:elevation="10dp"
            android:format="00:00:00"/>

        <ImageButton
            android:id="@+id/ic_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chronometer"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_play"
            android:elevation="20dp"/>

        <ImageView
            android:id="@+id/ic_main_planet"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_main_planet"
            android:elevation="5dp"
            android:rotation="30"/>

<!--        <ImageView-->
<!--            android:id="@+id/ic_meteor"-->
<!--            android:layout_width="250dp"-->
<!--            android:layout_height="250dp"-->
<!--            android:background="@drawable/ic_comet"-->
<!--            android:layout_alignParentLeft="true"-->
<!--            android:layout_marginTop="80dp"/>-->

        <ImageView
            android:id="@+id/ic_shooting_star"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/ic_shooting_star"
            android:elevation="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/ic_study"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:elevation="11dp"/>

    </RelativeLayout>
</FrameLayout>