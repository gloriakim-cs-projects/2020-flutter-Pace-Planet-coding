<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/FontStyle"
    android:background="@drawable/background_photo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pace\nPlanet"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:textColor="@color/colorWhite"
            android:textSize="60sp"
            android:textStyle="bold"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/ic_main_planet"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_main_planet"
            android:elevation="5dp"/>

        <ImageView
            android:id="@+id/ic_shooting_star"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/ic_shooting_star"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"/>

        <ImageView
            android:id="@+id/ic_rocket"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/ic_rocket"
            android:elevation="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="-30dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>