<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAll"
    android:theme="@style/FontStyle"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/planet_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="297"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorWhite"
            android:textSize="50sp"
            android:textStyle="bold"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/planet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planets"
            android:layout_below="@+id/planet_number"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/ic_comet"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/ic_comet"/>

        <ImageView
            android:id="@+id/ic_universe_circle"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_universe_circle"
            android:elevation="11dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/ic_shooting_star"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/ic_shooting_star"
            android:elevation="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</FrameLayout>